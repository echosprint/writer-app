{
  "name": "writer",
  "version": "1.0.0",
  "description": "Writer - Electron app for managing book chapters and notes",
  "main": "src/main.js",
  "scripts": {
    "start": "electron-forge start",
    "dev": "NODE_ENV=development electron .",
    "build-css": "tailwindcss -i ./src/styles.css -o ./public/styles.css --minify",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1"
  },
  "build": {
    "appId": "com.writer.app",
    "productName": "Writer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "public/**/*",
      "assets/**/*"
    ],
    "icon": "assets/icon.svg",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.9.0",
    "@electron-forge/maker-deb": "^7.9.0",
    "@electron-forge/maker-rpm": "^7.9.0",
    "@electron-forge/maker-squirrel": "^7.9.0",
    "@electron-forge/maker-zip": "^7.9.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.9.0",
    "@electron-forge/plugin-fuses": "^7.9.0",
    "@electron/fuses": "^1.8.0",
    "@tailwindcss/cli": "^4.1.13",
    "electron": "^38.1.2",
    "tailwindcss": "^4.1.13"
  }
}
